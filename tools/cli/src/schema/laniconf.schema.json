{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://std4453.github.io/lani/schemas/laniconf-01.json",
  "title": "Lani Config",
  "description": "Configuration file for Lani",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "type": {
      "description": "Type of project",
      "enum": [
        "raw",
        "node:ts",
        "react:ts:spa",
        "lib:ts",
        "lib:js",
        "qiankun:react:ts",
        "qiankun:raw",
        "mp:taro:react:ts"
      ]
    },
    "node": {
      "description": "Node.JS app-related settings",
      "type": "object",
      "properties": {
        "entry": {
          "description": "App entrypoint",
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["entry"]
    },
    "ci": {
      "description": "CI-related settings",
      "type": "object",
      "properties": {
        "workflow": {
          "description": "Github workflow name",
          "type": "string"
        },
        "image": {
          "description": "Build image name",
          "type": "string"
        },
        "deployment": {
          "description": "Deployment-related settings",
          "type": "object",
          "properties": {
            "env": {
              "description": "Enabled environments",
              "type": "array",
              "items": {
                "description": "Environment type",
                "enum": ["offline", "prerelease", "production"]
              }
            }
          },
          "additionalProperties": false,
          "required": ["env"]
        }
      },
      "additionalProperties": false,
      "required": ["image"]
    }
  },
  "additionalProperties": false,
  "required": ["type"]
}
