{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://std4453.github.io/lani/schemas/laniconf-01.json",
  "title": "Lani Config",
  "description": "Configuration file for Lani",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "type": {
      "description": "Type of project",
      "enum": [
        "raw",
        "node:ts",
        "react:ts:spa",
        "lib:ts",
        "lib:js",
        "qiankun:react:ts",
        "qiankun:raw",
        "mp:taro:react:ts"
      ]
    },
    "abilities": {
      "description": "Abilities to use with this project",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "enum": ["tracing"]
          },
          {
            "type": "array",
            "items": [
              {
                "enum": ["tracing"]
              },
              {
                "type": "object"
              }
            ],
            "minItems": 2,
            "maxItems": 2
          }
        ]
      }
    },
    "ci": {
      "description": "CI-related settings",
      "type": "object",
      "properties": {
        "workflow": {
          "description": "Github workflow name",
          "type": "string"
        },
        "image": {
          "description": "Build image name",
          "type": "string"
        },
        "deployment": {
          "description": "Deployment-related settings",
          "type": "object",
          "properties": {
            "name": {
              "description": "k8s deploy name",
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": ["name"]
        }
      },
      "additionalProperties": false,
      "required": ["image"]
    }
  },
  "additionalProperties": false,
  "required": ["type", "abilities"]
}
