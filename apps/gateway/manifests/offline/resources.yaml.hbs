apiVersion: apps/v1
kind: Deployment
metadata:
  name: gateway
  namespace: lani-offline
  labels:
    app: gateway
spec:
  replicas: 1
  selector:
    matchLabels:
      app: gateway
  template:
    metadata:
      labels:
        app: gateway
      annotations:
        telepresence.getambassador.io/inject-traffic-agent: enabled
    spec:
      containers:
      - name: gateway
        image: {{image}}
        imagePullPolicy: IfNotPresent
        ports:
        - name: http
          containerPort: 8080
        resources:
          limits:
            memory: "100Mi"
            cpu: "500m"
          requests:
            memory: "10Mi"
            cpu: "10m"
        env:
        - name: NODE_ENV
          value: "offline"
        - name: CONFIG_FILENAME
          value: /config/config.yaml
        volumeMounts:
        - name: config
          mountPath: /config
          readOnly: true
      imagePullSecrets:
      - name: ghcr-io-regcred
      volumes:
      - name: config
        configMap:
          name: gateway-config
---
kind: Service
apiVersion: v1
metadata:
  name: gateway
  namespace: lani-offline
spec:
  selector:
    app: gateway
  ports:
  - name: http
    port: 8080
    targetPort: http
