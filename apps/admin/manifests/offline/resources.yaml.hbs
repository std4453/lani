apiVersion: apps/v1
kind: Deployment
metadata:
  name: admin
  namespace: lani-offline
  labels:
    app: admin
spec:
  replicas: 1
  selector:
    matchLabels:
      app: admin
  template:
    metadata:
      labels:
        app: admin
    spec:
      containers:
      - name: admin
        image: {{image}}
        imagePullPolicy: IfNotPresent
        ports:
        - name: http
          containerPort: 8080
        resources:
          limits:
            memory: "100Mi"
            cpu: "500m"
          requests:
            memory: "10Mi"
            cpu: "10m"
        env:
        - name: NODE_ENV
          value: "offline"
        volumeMounts:
          - name: config
            mountPath: /usr/share/nginx/html/config.json
            subPath: config.json
      imagePullSecrets:
      - name: ghcr-io-regcred
      volumes:
      - name: config
        configMap:
          name: admin-config
---
kind: Service
apiVersion: v1
metadata:
  name: admin
  namespace: lani-offline
spec:
  selector:
    app: admin
  ports:
  - name: http
    port: 8080
    targetPort: 8080
